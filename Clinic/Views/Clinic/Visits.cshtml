@using Clinic.ViewModels.Clinic
@model VisitsViewModel

<h1>Select the visit time</h1>

@*<input id="datetimepicker" type="text">*@


<form asp-controller="Clinic" asp-action="Visits" method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" id="datetimepicker" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>


    <input asp-for="DoctorId" type="hidden" value="@Model.DoctorId" />

    <div class="form-group">
        <button type="submit" class="btn btn-success">Book Visit</button>
    </div>
</form>